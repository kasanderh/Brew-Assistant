<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bottom_sheet_test"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/background_bottom_bar"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".BottomSheetActivity">


    <ImageView
        android:id="@+id/image_view_button_home_test"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_button_timer_test"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_stopwatch"
        app:layout_constraintLeft_toRightOf="@id/image_view_button_home_test"
        app:layout_constraintRight_toLeftOf="@id/image_view_button_info_test"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_button_info_test"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_view_button_timer_test"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_bottom_reset_test"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_button_info_test" />

    <Chronometer
        android:id="@+id/chronometer_bottom_bar_test"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:format="%s"
        android:gravity="center_horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_bottom_start_test"
        app:layout_constraintStart_toEndOf="@id/button_bottom_reset_test"
        app:layout_constraintTop_toBottomOf="@id/image_view_button_timer_test" />

    <Button
        android:id="@+id/button_bottom_start_test"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/start"
        app:layout_constraintBottom_toTopOf="@id/button_bottom_stop_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_button_home_test" />

    <Button
        android:id="@+id/button_bottom_stop_test"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bottom_start_test" />


</androidx.constraintlayout.widget.ConstraintLayout>