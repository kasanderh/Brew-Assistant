                <!--            android:layout_marginEnd="24dp"-->
                <!--            app:cardCornerRadius="6dp"-->
                <!--            app:layout_constraintBottom_toTopOf="@id/card_view_coffee_tips_recipe"-->
                <!--            app:layout_constraintEnd_toEndOf="parent"-->
                <!--            app:layout_constraintStart_toStartOf="parent"-->
                <!--            app:layout_constraintTop_toBottomOf="@id/card_view_coffee_tips_description">-->

                <!--            <TextView-->
                <!--                android:id="@+id/text_view_coffee_tips_dose"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:paddingStart="8dp"-->
                <!--                android:paddingTop="8dp"-->
                <!--                android:paddingEnd="8dp"-->
                <!--                android:paddingBottom="8dp"-->
                <!--                android:text="@string/coffee_tips_dose"-->
                <!--                android:textSize="18sp" />-->

                <!--        </androidx.cardview.widget.CardView>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_coffee_tips_recipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_view_coffee_tips_description">


                    <TextView
                        android:id="@+id/text_view_coffee_tips_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/off_black"
                        android:text="@string/coffee_tips_list"
                        android:textSize="18sp" />


                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bottom_sheet"
        layout="@layout/layout_bottom_bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>